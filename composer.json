  "scripts": {
    "setup": [
      "@prepare",
      "@build"
    ],
    "prepare": [
      "@prepare:php",
      "@prepare:js"
    ],
    "build": [
      "yarn --cwd assets/js build"
    ],
    "prepare:php": [
      "composer install --no-interaction --prefer-dist --no-suggest"
    ],
    "prepare:js": [
      "yarn --cwd assets/js install"
    ],
    "test": [
      "@stage-lint",
      "@stage-test"
    ],
    "stage-lint": [
      "@phpcs",
      "@phpmd",
      "@eslint"
    ],
    "stage-test": [
      "@jest",
      "@bin:wp-test-p"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml"
    ],
    "phpmd": [
      "phpmd ./src/,./configs/,./tests/ ansi phpmd.xml"
    ],
    "phpunit": [
      "phpunit --stop-on-failure --colors=always"
    ],
    "phpunit:no": [
      "@phpunit --no-coverage"
    ],
    "eslint": [
      "yarn --cwd assets/js lint"
    ],
    "jest": [
      "yarn --cwd assets/js cover"
    ],
    "jest:update": [
      "yarn --cwd assets/js cover:update"
    ],
    "prepare:packages": [
      "composer prepare -d packages/wp-content-framework/core",
      "composer prepare -d packages/wp-content-framework/common",
      "composer prepare -d packages/wp-content-framework/cache",
      "composer prepare -d packages/wp-content-framework/db",
      "composer prepare -d packages/wp-content-framework/presenter",
      "composer prepare -d packages/wp-content-framework/view",
      "composer prepare -d packages/wp-content-framework/cron",
      "composer prepare -d packages/wp-content-framework/controller",
      "composer prepare -d packages/wp-content-framework/admin",
      "composer prepare -d packages/wp-content-framework/api",
      "composer prepare -d packages/wp-content-framework/update",
      "composer prepare -d packages/wp-content-framework/update_check",
      "composer prepare -d packages/wp-content-framework/upgrade",
      "composer prepare -d packages/wp-content-framework/mail",
      "composer prepare -d packages/wp-content-framework/log",
      "composer prepare -d packages/wp-content-framework/post",
      "composer prepare -d packages/wp-content-framework/device",
      "composer prepare -d packages/wp-content-framework/editor",
      "composer prepare -d packages/wp-content-framework/social",
      "composer prepare -d packages/wp-content-framework/session",
      "composer prepare -d packages/wp-content-framework/custom_post",
      "composer prepare -d packages/wp-content-framework/test"
    ],
    "bin:wp-test": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ./ci-helper/bin/php/wp-test.sh",
    "bin:wp-test-p": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ACTIVATE_POPULAR_PLUGINS=1 ./ci-helper/bin/php/wp-test.sh",
    "bin:phpcs": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ./ci-helper/bin/php/phpcs.sh",
    "bin:phpmd": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ./ci-helper/bin/php/phpmd.sh",
    "bin:js-lint": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ./ci-helper/bin/js/js-lint.sh",
    "bin:js-test": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ./ci-helper/bin/js/js-test.sh",
    "bin:build": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} TRAVIS_REPO_SLUG=technote-space/0-framework-test TRAVIS_TAG=v1.2.3 source ./ci-helper/bin/deploy/env.sh && bash ./ci-helper/bin/deploy/create.sh",
    "bin:test": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} TRAVIS_REPO_SLUG=technote-space/0-framework-test TRAVIS_TAG=v1.2.3 bash ./ci-helper/bin/test.sh",
    "bin:test-p": "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} TRAVIS_REPO_SLUG=technote-space/0-framework-test TRAVIS_TAG=v1.2.3 ACTIVATE_POPULAR_PLUGINS=1 bash ./ci-helper/bin/test.sh",
    "bin:download": [
      "mkdir -p ./ci-helper/.git",
      "chmod -R +w ./ci-helper/.git && rm -rdf ./ci-helper",
      "rm -f ./tests/bootstrap.php ./phpcs.xml ./phpmd.xml phpunit.xml",
      "git clone --depth=1 https://github.com/wp-content-framework/ci-helper.git ci-helper"
    ],
    "bin:prepare": [
      "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} ACTIVATE_POPULAR_PLUGINS=1 bash ./ci-helper/bin/prepare.sh"
    ],
    "bin:update": [
      "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} bash ./ci-helper/bin/update/composer.sh",
      "TRAVIS_BUILD_DIR=${TRAVIS_BUILD_DIR:-$(cd $(dirname $0); pwd)} bash ./ci-helper/bin/update/package.sh"
    ]
  },
  "config": {
    "process-timeout": 1200,
    "platform": {
      "php": "5.6"
    }
  }
}
